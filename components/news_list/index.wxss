.news-list {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
}
.news-item {
  margin: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #F0F0F0;
}
.news-item .title {
  font-size: 32rpx;
  color: #141414;
  max-height: 88rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.news-item .footer {
  margin-top: 20rpx;
  display: flex;
  font-size: 22rpx;
  color: #797979;
}
.news-item .footer text + text {
  margin-left: 20rpx;
}
.news-item .news-item-box {
  margin: 20rpx 0;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  min-height: 164rpx;
}
.news-item .news-item-box > view {
  margin-right: 30rpx;
}
.news-item .news-item-box image {
  width: 230rpx;
  height: 164rpx;
}
.news-item .news-item-box image.img5 {
  position: relative;
  width: 100%;
  height: 368rpx;
}
.news-item .news-item-box image.img5::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url(data:image/png;base64,) 50% 50% no-repeat;
}
.news-item .news-item-box image.img3 {
  width: 48%;
}
.news-item .news-item-box image.img4 {
  width: 32%;
}
.news-item .news-item-box .footer {
  position: absolute;
  bottom: 0;
}
